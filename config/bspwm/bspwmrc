#!/bin/zsh

#----------------------
#   STARTUP PROGRAMS
#----------------------

# polybar
polybar main &

# background
feh --bg-fill ~/.background/houses.jpg &

# sxhkd
sxhkd &

# compton
compton --backend=xr_glx_hybrid &

# cursor
xsetroot -cursor_name left_ptr

#------------
#   CONFIG
#------------

# desktop lists
bspc monitor -d code terminal firefox music dl

# window borders
bspc config focused_border_color "#f26565"
bspc config normal_border_color "#935401"
bspc config border_width 3

# window gaps
bspc config window_gap 20

# desktop padding
bspc config top_padding 30
bspc config bottom_padding 10
bspc config right_padding 15
bspc config left_padding 15

#-----------
#   RULES
#-----------

bspc rule -a Spotify desktop=music
bspc rule -a Alacritty:ncmpcpp desktop=music
