{
    /* Editor Settings*/
    "editor.fontFamily": "Iosevka",
    "editor.fontSize": 17.5,
    
    /* Breadcrums */
    "breadcrumbs.enabled": false,
    "breadcrumbs.filePath": "off",
    "breadcrumbs.symbolPath": "off",
    "window.zoomLevel": 0.8,
    
    /* Better for code */
    "editor.smoothScrolling": false,
    
    /* Enable the menu with Alt */
    "window.menuBarVisibility": "toggle",

    // // ----------------
    // // ---- Colors ----    
    // // ----------------

    /* workbench */
    "workbench.colorTheme": "One Dark Pro",
    "workbench.colorCustomizations": {
        "[One Dark Pro]": {
            /* gutter and line numbers */
            "editorLineNumber.activeForeground": "#E06C7560",
            "editorGutter.background": "#2c323a",

            /* word and selection highlighting */
            "editor.selectionBackground": "#2d3139",
            "editor.wordHighlightBorder": "#fff0",
            "editor.selectionHighlightBorder": "#fff0",
            "editor.wordHighlightStrongBorder": "#fff0",

            /* tabs */
            "tab.activeBorder": "#69250a"
        }
    },

    // ---------------------------
    // ---- Language Settings ----    
    // ---------------------------
    
    /* files */
    "files.associations": {
        "sxhkdrc": "sxhkdrc"
    },

    /* C/C++ */
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "[c]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false
    },

    // ---------------------------
    // ---- Explorer Settings ----    
    // ---------------------------
    /* Files to hide */
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "build": true,
        ".vscode": true
    }
}