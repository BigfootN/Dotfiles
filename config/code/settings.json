{
    /* Editor Settings*/
    "editor.fontFamily": "Iosevka",
    "editor.fontSize": 17.5,
    "editor.renderWhitespace": "all",
    
    /* Breadcrums */
    "breadcrumbs.enabled": false,
    "breadcrumbs.filePath": "off",
    "breadcrumbs.symbolPath": "off",
    "window.zoomLevel": 0.8,
    
    /* Better for code */
    "editor.smoothScrolling": false,
    
    /* Enable the menu with Alt */
    "window.menuBarVisibility": "toggle",

    // // ----------------
    // // ---- Colors ----    
    // // ----------------

    /* workbench */
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "workbench.colorCustomizations": {
        "[Gruvbox Dark Medium]": {
            /* gutter and line numbers */
            "editorLineNumber.activeForeground": "#69250a",
            "editorGutter.background": "#1d2021",

            /* status bar */
            "statusBar.background": "#3c3836",
            "statusBar.border": "#282828",
            "statusBar.foreground": "#928374",

            /* tabs */
            "tab.activeBorder": "#69250a"
        }
    },

    // ---------------------------
    // ---- Language Settings ----    
    // ---------------------------
    
    /* files */
    "files.associations": {
        "sxhkdrc": "sxhkdrc",
        "*.h": "c"
    },

    /* C/C++ */
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "[c]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": false
    },

    /* Latex */
    "latex-workshop.latex.autoBuild.run":"never",

    // ---------------------------
    // ---- Explorer Settings ----    
    // ---------------------------
    /* Files to hide */
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "build": true,
        ".vscode": true
    },
}