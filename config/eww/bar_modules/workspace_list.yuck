(include "./bar_modules/workspace.yuck")

(defpoll focused_workspace :interval "50ms"
  :initial 1
  `i3-msg -t get_workspaces | jq '.[] | select(.focused == true) | .num'`
)

(defwidget workspace_list []
  (box
    :class "workspace_list"
    :space-evenly false
    :spacing 0
    (workspace :number "1"
      :icon "אַ"
      :focused_workspace "${focused_workspace}"
    )
    (
      workspace :number "2"
      :icon ""
      :focused_workspace "${focused_workspace}"
    )
    (
      workspace :number "3"
      :icon ""
      :focused_workspace "${focused_workspace}"
    )
    (
      workspace :number "4"
      :icon ""
      :focused_workspace "${focused_workspace}"
    )
    (
      workspace :number "5"
      :icon ""
      :focused_workspace "${focused_workspace}"
    )
    (
      workspace :number "6"
      :icon ""
      :focused_workspace "${focused_workspace}"
    )
  )
)