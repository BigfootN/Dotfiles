(defwidget module [name icon value_widget]
  (box
    :class "${name} module"
    :spacing 0
    (box
      :space-evenly false
      :spacing 0
      (label  :class "${name}_icon module_icon"
        :text "${icon}"
      )
      (label  :class "${name}_value module_value"
        :markup "${value_widget}"
      )
    )
  )
)