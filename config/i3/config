#========================#
# -- General Settings -- #
#========================#

# gaps
gaps outer 8
gaps inner 4

# focus
focus_on_window_activation focus

# don't focus on mouse
focus_follows_mouse no

#============#
# -- Keys -- #
#============#

# main modifier
set $mod Mod4
set $shift Shift
set $alt Mod1
set $ctrl Control

# change workspace
bindsym $mod+$alt+Left workspace prev
bindsym $mod+$alt+Right workspace next

# move windows to workspace
bindsym $mod+Shift+1 move window to workspace 1; workspace number 1
bindsym $mod+Shift+2 move window to workspace 2; workspace number 2
bindsym $mod+Shift+3 move window to workspace 3; workspace number 3
bindsym $mod+Shift+4 move window to workspace 4; workspace number 4
bindsym $mod+Shift+5 move window to workspace 5; workspace number 5
bindsym $mod+Shift+6 move window to workspace 6; workspace number 6

# move window in layout
bindsym $mod+$alt+$ctrl+Left move left
bindsym $mod+$alt+$ctrl+Right move right
bindsym $mod+$alt+$ctrl+Up move up
bindsym $mod+$alt+$ctrl+Down move down

# move to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6

# exit sway
bindsym $mod+e exit

# focus window
bindsym $mod+Left focus left
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Down focus down

# rofi
bindsym $mod+r exec rofi -show Run \
						 -modi "Run:~/.config/rofi/rofi_apps.sh" \
						 -theme config_apps
bindsym $mod+p exec rofi -show apps \
						 -modi "apps:~/.config/rofi/rofi_system.sh" \
						 -theme config_system

# volume
bindsym XF86AudioRaiseVolume exec amixer set Master 1%+
bindsym XF86AudioLowerVolume exec amixer set Master 1%-
bindsym XF86AudioMute exec amixer set Master toggle

# kill window
bindsym $mod+k kill

#===============#
# -- Windows -- #
#===============#

# colors
set $red #cc241d
set $gray #7c6f64

# border type
default_border pixel 2
default_floating_border pixel 2

# border clors
client.focused $red $red $red $red $red
client.focused_inactive $gray $gray $gray
client.unfocused $gray $gray $gray

# assign windows
for_window [class="Transmission-gtk"] move container to workspace number 6; workspace 6
for_window [class="Navigator"] move container to workspace number 1; workspace 1
for_window [class="Code"] move container to workspace number 2; workspace 2
for_window [class="Alacritty"] move container to workspace number 3; workspace number 3
for_window [class="org.gnome.Nautilus"] move container to workspace 4; workspace 4

#==================#
# -- Background -- #
#==================#

# use feh for background
exec_always --no-startup-id feh --fullscreen --bg-scale --no-xinerama $HOME/.wallpaper/wall.jpg

#===================#
# -- Autoloaunch -- #
#===================#

# autoloaunch script
exec_always --no-startup-id $HOME/.config/i3/autolaunch.sh