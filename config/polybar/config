[bar/main]
bottom = false
fixed-center = true

; geometry
height = ${env:POLYBAR_HEIGHT}

; colors
background = #1d2021
foreground = #ffffff

; font
font-0 = "Iosevka Term:size=13;0"
font-1 = "Iosevka Term:size=22;3"

; padding
padding = 4

; modules
modules-right = cpu wireless-network date
modules-center = music
module-margin = 2

[module/cpu]
type = internal/cpu
label = ${env:POLYBAR_CPU_LABEL}

[module/wireless-network]
type = internal/network
interface = wlp5s0
interval = 1

label-connected = ${env:POLYBAR_NETWORK_LABEL}

[module/date]
type = internal/date
time = %H:%M

label = ${env:POLYBAR_DATE_LABEL}

[module/music]
type = custom/script

tail = true
; fixed-center = true

; format = test
format-prefix = "${env:POLYBAR_MUSIC_LABEL}"
format-prefix-font = 2

exec-if = musicctrl --listplayers
exec = musicctrl --playerfirst --print "%a - %t"
interval = 1
